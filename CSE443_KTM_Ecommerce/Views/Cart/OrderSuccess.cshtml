@model CSE443_KTM_Ecommerce.Models.Order

@{
    ViewData["Title"] = "Order Success";
}

<style>
    .order-success-container {
        max-width: 600px;
        margin: 80px auto;
        padding: 40px;
        background-color: #f9f9f9;
        border-radius: 20px;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        text-align: center;
        font-family: 'Segoe UI', sans-serif;
    }

        .order-success-container h2 {
            font-size: 2rem;
            color: #2e2e2e;
            margin-bottom: 20px;
        }

        .order-success-container p {
            font-size: 1.1rem;
            color: #555;
            margin-bottom: 30px;
        }

    .btn-black {
        background-color: #000;
        color: #fff;
        padding: 12px 28px;
        font-size: 1rem;
        border: none;
        border-radius: 8px;
        text-decoration: none;
        transition: all 0.3s ease;
    }

        .btn-black:hover {
            background-color: #333;
            color: #fff;
            text-decoration: none;
        }
</style>

<div class="order-success-container">
    <h2>Order placed successfully!</h2>
    <p>Your Order ID is: <strong>@Model.Id</strong></p>
    <a href="@Url.Action("Index", "Home")" class="btn-black">Continue Shopping</a>
</div>
