@{
    Layout = "AdminLayout";
}

<div class="page-content">
    <div class="container-xxl">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Add New Role</h4>
                    </div>
                    <div class="card-body">
                        <form asp-action="RoleAdd" asp-controller="Role" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                            
                            <div class="mb-3">
                                <label for="Name" class="form-label">Role Name</label>
                                <input type="text" class="form-control" id="Name" name="Name" required 
                                       placeholder="Enter role name (e.g., ADMIN, MANAGER)">
                                <div class="form-text">Role name should be in uppercase letters</div>
                            </div>

                            <div class="text-end">
                                <button type="submit" class="btn btn-primary">Create Role</button>
                                <a asp-action="RoleList" class="btn btn-secondary">Cancel</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Convert role name to uppercase
            $('#Name').on('input', function() {
                this.value = this.value.toUpperCase();
            });
        });
    </script>
}