@model CSE443_KTM_Ecommerce.Controllers.UserDetailViewModel
@using CSE443_KTM_Ecommerce.Enum
@{
    ViewData["Title"] = "User Details";
    Layout = "AdminLayout";
}

<div class="container-fluid">
    <div class="row">
        <!-- User Information Card -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">User Information</h5>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <h4 class="mt-2">@Model.User.FullName</h4>
                        <p class="text-muted">@Model.User.Email</p>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Phone Number</label>
                        <p>@Model.User.PhoneNumber</p>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Address</label>
                        <p>@Model.User.Address</p>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Roles</label>
                        <div>
                            @foreach (var role in Model.User.Roles)
                            {
                                <span class="badge bg-primary me-1">@role.Name</span>
                            }
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Member Since</label>
                        <p>@Model.User.CreatedAt.ToString("dd/MM/yyyy")</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Order Statistics Card -->
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Order Statistics</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="card bg-primary text-white">
                                <div class="card-body">
                                    <h6 class="card-title">Total Orders</h6>
                                    <h3 class="mb-0">@Model.TotalOrders</h3>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card bg-success text-white">
                                <div class="card-body">
                                    <h6 class="card-title">Total Spent</h6>
                                    <h3 class="mb-0">$@Model.TotalSpent.ToString("N2")</h3>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card bg-info text-white">
                                <div class="card-body">
                                    <h6 class="card-title">Last Order</h6>
                                    <h3 class="mb-0">@(Model.LastOrderDate?.ToString("dd/MM/yyyy") ?? "No orders")</h3>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Order History -->
            <div class="card mt-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">Order History</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Order ID</th>
                                    <th>Date</th>
                                    <th>Total</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var order in Model.Orders)
                                {
                                    var orderStatus = (OrderStatus)order.Status;
                                    <tr>
                                        <td>#@order.Id</td>
                                        <td>@order.CreatedAt.ToString("dd/MM/yyyy")</td>
                                        <td>$@order.OrderTotalPrice.ToString("N2")</td>
                                        <td>
                                            <span class="badge bg-@(orderStatus == OrderStatus.DELIVERED ? "success" : 
                                                                   orderStatus == OrderStatus.PROCESSED ? "warning" : 
                                                                   orderStatus == OrderStatus.CANCELLED ? "danger" : "info")">
                                                @orderStatus
                                            </span>
                                        </td>
                                        <td>
                                            <a href="/Order/OrderDetail/@order.Id" class="btn btn-sm btn-info">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

